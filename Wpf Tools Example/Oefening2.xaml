<Window x:Class="Wpf_Tools_Example.Oefening2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Tools_Example"
        mc:Ignorable="d"
        Title="Oefening2" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel>
                <TabControl>
                    <TabItem Header="Tab 1">
                        <StackPanel>
                            <TextBlock x:Name="TxtMain" Text="Ik sta in de tab1!"></TextBlock>
                            <TextBox x:Name="txtTab1" HorizontalAlignment="Left" TextChanged="txtTab1_TextChanged" Width="200"></TextBox>
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="Tab 2">
                        <StackPanel>
                            <TextBlock Text="Ik sta in tab2!"></TextBlock>
                            <TextBox x:Name="txtTab2" HorizontalAlignment="Left" Width="200"></TextBox>
                        </StackPanel>
                    </TabItem>
                </TabControl>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
