<Window x:Class="Wpf_Tools_Example.Oefening6"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Tools_Example"
        mc:Ignorable="d"
        Title="Oefening6" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Vink wat aan!"/>
            <CheckBox x:Name="CbOptie1" Foreground="Red">Rood</CheckBox>
            <CheckBox x:Name="CbOptie2" Foreground="Orange">Oranje</CheckBox>
            <CheckBox x:Name="CbOptie3" Foreground="Yellow">Geel</CheckBox>
            <CheckBox x:Name="CbOptie4" Foreground="Green">Groen</CheckBox>
            <CheckBox x:Name="CbOptie5" Foreground="Blue">Blauw</CheckBox>
            <Button x:Name="btnSubmit" Width="100" Click="btnSubmit_Click" HorizontalAlignment="Left" Margin="0,10,0,0">Submit</Button>
        </StackPanel>
    </Grid>
</Window>
